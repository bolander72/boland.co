---
import { ClientRouter } from "astro:transitions";
import { ChevronRightIcon } from "lucide-react";
import { Font } from "astro:assets";

import "@/styles/global.css";

interface Props {
    title?: string;
    description?: string;
    image?: string;
}

const {
    title = "Michael Boland",
    description = "indie product dev",
    image = "",
} = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <ClientRouter />

        <!-- Primary Meta Tags -->
        <title>{title}</title>
        <meta name="title" content={title} />
        <meta name="description" content={description} />
        <meta name="author" content="Michael Boland" />

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="website" />
        <meta property="og:url" content={Astro.url.href} />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content={image} />

        <!-- Twitter -->
        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:url" content={Astro.url.href} />
        <meta property="twitter:title" content={title} />
        <meta property="twitter:description" content={description} />
        <meta property="twitter:image" content={image} />

        <Font cssVariable="--font-figtree" preload />

        <!-- Favicon -->
        <link
            rel="icon"
            type="image/png"
            sizes="32x32"
            href="/favicon.png"
            class="invert"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="16x16"
            href="/favicon.png"
            class="invert"
        />
        <link
            rel="shortcut icon"
            type="image/png"
            href="/favicon.png"
            class="invert"
        />
    </head>
    <body class="min-h-screen max-w-[650px] mx-auto px-4 py-12 font-figtree">
        <div class="gap-8">
            <main class="w-full">
                <slot />
            </main>
        </div>
        <footer
            class="w-full md:w-1/5 flex flex-col items-center mt-0 md:mt-0 md:py-9.5"
        >
        </footer>
    </body>
</html>
